{
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "@src/*": ["./src/*"],
            "@components": ["./src/components/*"],
            "@base-components": ["./src/base-components/*"],
            "@utils": ["./src/utils/*"],
            "@screens": ["./src/screens/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
