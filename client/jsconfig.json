{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["./src/*"],
      "@components": ["./src/components/*"],
      "@base-components": ["./src/base-components/*"],
      "@utils": ["src/utils/*"],
      "@screens": ["./src/screens/*"],
      "@validations": ["./src/validations/*"],
      "@proxy": ["src/proxy/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
